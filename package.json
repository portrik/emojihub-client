{
    "name": "emoji-hub-client",
    "version": "1.0.0",
    "description": "Client for the EmojiHub API.",
    "scripts": {
        "build": "rimraf public && pnpm run deck",
        "deck": "marp --no-stdin PITCHME.md -o public/index.html --html && ncp assets public/assets",
        "start": "marp -ps ."
    },
    "devDependencies": {
        "@marp-team/marp-cli": "^3.4.0",
        "ncp": "^2.0.0",
        "rimraf": "^5.0.5"
    }
}
