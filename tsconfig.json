{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "jsx": "react-jsx",
        "sourceMap": true,
        "incremental": false,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "paths": {
            "$api": [
                "./src/api/index.ts"
            ],
            "$context": [
                "./src/context/index.ts"
            ],
            "$components/*": [
                "./src/components/*"
            ],
            "$pages": [
                "./src/pages/index.ts"
            ],
            "$utils": [
                "./src/utils/index.ts"
            ]
        }
    },
    "include": [
        "src",
        "vite.config.ts"
    ]
}
